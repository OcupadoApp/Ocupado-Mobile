*
  box-sizing border-box

body
  width 100%
  overflow hidden

#authorizeButton
  background #3d3d3d
  color #d5b430
  border none
  border-radius 5px
  padding 10px 20px
  position absolute
  top 50%
  margin-top -35px
  left 50%
  margin-left -105px
  font-size 42px
  font-family 'Raleway'
  font-weight 100

#OcupadoWrapper
  position relative
  width 100%
  height 100%
  margin 0 auto
  padding-top 62px
  overflow hidden
  overflow-x auto
  &::-webkit-scrollbar
    display none

