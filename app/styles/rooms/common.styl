body
  background #000
  position absolute
  height 100%
  width 100%
  margin 0
  font-family 'Raleway'
  font-weight 100
  color #fff

h1
  font-weight 500
  text-transform uppercase
  font-size 68px
  text-align center
  margin-top 64px

img
  width 110px
  height 110px
  border-radius 50%
  position absolute
  z-index 10
  left 50%
  margin-left -55px
  margin-top -45px

#calendarMenuBtn
  position absolute
  bottom 0
  right 0
  z-index 110
  font-size 40px
  text-shadow 0 -2px rgba(0,0,0,0.3)
  background transparent
  border none
  color #fff
  font-family Times New Roman, Times New Roman, Times, serif
  padding 10px
  line-height 30px
  cursor pointer
  text-decoration none

.time-remaining
  font-size 51px
  text-align center
  margin-top -3px

.polar-clock-container
  position absolute
  width 100%
  height 50%
  bottom 0
  padding 0 50px 70px 50px
  box-sizing border-box

.room-status-text
  position absolute
  left 0
  margin-bottom 0
  font-size 43px
  text-align center
  width 100%
  text-shadow 0 -2px rgba(0,0,0,0.3)

.polar-clock
  width 100%
  height 100%

#OcupadoApp
  position absolute
  height 100%
  display -webkit-box
  display box
  -webkit-box-orient horizontal
  box-orient horizontal
  overflow hidden

  section
    top 0
    width 100%
    height 100%
    border-left 1px solid #000
    -webkit-box-flex 1
    box-flex 1

    &:first-child
      border-left none

    &.small
      h1
        font-size 48px
        margin-top 10px
        margin-bottom 20px
      .room-status-text
        font-size 30px
      img.creator-image
        width 70px
        height 70px
        margin-left -35px
        margin-top -25px
      .time-remaining
        font-size 31px
      .icon-clock
        margin-top 10px

