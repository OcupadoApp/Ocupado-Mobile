.vacant
  gradient(#B5B44B, #92B142)

  .book-room
    opacity 0.7
    width 100%
    text-align center
    margin-bottom 10px

  .book-room-icon
    font-size 140px
    opacity 0.4
    position relative
    height 90px
    width 100%
    line-height 85px
    text-align center
    font-weight 500
    padding-left 5px

    &:before
      content ''
      display block
      width 80px
      height 80px
      position absolute
      left 50%
      margin-left -40px
      z-index -1
      border-radius 50%
      border 2px dashed #fff
