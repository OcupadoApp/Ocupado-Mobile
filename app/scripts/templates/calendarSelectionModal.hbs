<div class="modal-overlay"></div>

<div class="modal">
  <h2>Rooms to display:</h2>
  <a class="close-modal">&#10006;</a>
  <hr />
  <div class="checkbox-group">
    {{#each cals}}
    <label{{#unless this.isSelected}} class="inactive"{{/unless}}>
      <div class="draggable-handle" style="border-bottom: 5px solid {{this.color}};">..<br>..</div>
      {{this.name}}
      <input type="checkbox" {{#if this.isSelected}}checked{{/if}} data-resourceid="{{this.resourceId}}" />
    </label>
    {{/each}}
  </div>
</div>
